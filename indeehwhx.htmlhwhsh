    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- Initialize Lucide Icons ---
            lucide.createIcons();

            function padZero(num) { return num < 10 ? '0' + num : num; }

            // --- Greeting, Date, and Clock Logic ---
            function updateDateTime() {
                const now = new Date();
                const hour = now.getHours();
                const greetingEl = document.getElementById('greeting');
                const datetimeEl = document.getElementById('datetime');
                const clockEl = document.getElementById('clock');

                let greetingText = '';
                if (hour >= 4 && hour < 11) { greetingText = 'Selamat Pagi â˜€ï¸'; } 
                else if (hour >= 11 && hour < 15) { greetingText = 'Selamat Siang ðŸŒ¤ï¸'; } 
                else if (hour >= 15 && hour < 19) { greetingText = 'Selamat Sore ðŸŒ‡'; } 
                else { greetingText = 'Selamat Malam ðŸŒƒ'; }
                greetingEl.textContent = greetingText;

                const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                datetimeEl.textContent = now.toLocaleDateString('id-ID', options);

                const hours = padZero(now.getHours());
                const minutes = padZero(now.getMinutes());
                const seconds = padZero(now.getSeconds());
                clockEl.textContent = `${hours}:${minutes}:${seconds}`;
            }
            
            // --- Footer Year Logic ---
            document.getElementById('year').textContent = new Date().getFullYear();

            // --- Purchase Popup Notification Logic ---
            const popupEl = document.getElementById('purchase-popup');
            const purchases = [
                { name: 'Rizky', city: 'Jakarta', item: 'Akun Pangkat Major' },
                { name: 'Budi', city: 'Surabaya', item: 'Voucher 10.000 Cash' },
                { name: 'Eka', city: 'Bandung', item: 'Jasa GB 1 Minggu' },
                { name: 'Putra', city: 'Medan', item: 'Voucher 50.000 Cash' },
                { name: 'Dewi', city: 'Makassar', item: 'Akun Pangkat Diamond' },
                { name: 'Agus', city: 'Yogyakarta', item: 'Jasa GB Misi' },
                { name: 'Sari', city: 'Palembang', item: 'Voucher 20.000 Cash' },
            ];

            function showPurchasePopup() {
                const randomPurchase = purchases[Math.floor(Math.random() * purchases.length)];
                
                popupEl.innerHTML = `
                    <div class="flex items-center">
                        <div class="mr-3 text-green-400">
                            <i data-lucide="check-circle-2" class="w-8 h-8"></i>
                        </div>
                        <div>
                            <p class="font-bold">${randomPurchase.name} dari ${randomPurchase.city}</p>
                            <p class="text-sm text-gray-300">baru saja membeli ${randomPurchase.item}.</p>
                        </div>
                    </div>
                `;
                lucide.createIcons(); 

                popupEl.classList.remove('hidden', 'popup-exit');
                popupEl.classList.add('popup-enter');

                setTimeout(() => {
                    popupEl.classList.remove('popup-enter');
                    popupEl.classList.add('popup-exit');
                    // Optional: fully hide after animation ends
                    setTimeout(() => popupEl.classList.add('hidden'), 500);
                }, 5000); // Popup stays for 5 seconds
            }

            // --- Initial Calls and Intervals ---
            updateDateTime();
            setInterval(updateDateTime, 1000);

            setTimeout(() => {
                showPurchasePopup();
                setInterval(showPurchasePopup, 12000); // Show new popup every 12 seconds
            }, 4000); // Wait 4 seconds before first popup
        });
    </script>

